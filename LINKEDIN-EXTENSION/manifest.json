{
  "manifest_version": 3,
  "name": "LinkedIn Scraper",
  "version": "1.0",
  "description": "Scrapes LinkedIn profile data including name, location, about, followers, and connections.",
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*",
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "action": {
    "default_popup": "popup.html"
    
  },
  "background": {
    "service_worker": "background.js"
  }
  
}
